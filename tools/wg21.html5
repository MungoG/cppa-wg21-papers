<!DOCTYPE html>
<html lang="en"$if(dir)$ dir="$dir$"$endif$>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
$if(title)$
  <title>$if(document)$$document$: $endif$$title$</title>
$else$
  <title>$if(document)$$document$$endif$</title>
$endif$
$for(css)$
  <link rel="stylesheet" href="$css$">
$endfor$
$for(header-includes)$
  $header-includes$
$endfor$
</head>
<body>

<!-- C++ Alliance Header -->
<header class="paper-header">
  <div class="header-text">WG21 Proposal</div>
</header>

$if(title)$
<h1>$title$</h1>
$endif$

<!-- Document Metadata -->
$if(document)$
<div class="document-info">
  <p><strong>Document Number:</strong> $document$</p>
$if(date)$
  <p><strong>Date:</strong> $date$</p>
$endif$
$if(project)$
  <p><strong>Project:</strong> $project$</p>
$endif$
$if(audience)$
  <p><strong>Audience:</strong> $audience$</p>
$endif$
$if(reply-to)$
  <p><strong>Reply-to:</strong> $for(reply-to)$$reply-to$$sep$<br><strong></strong> $endfor$</p>
$endif$
</div>
$endif$

<!-- Table of Contents -->
$if(toc)$
<nav class="toc">
  <h2 class="toc-title">Table of Contents</h2>
  $toc$
</nav>
$endif$

$body$

$for(include-after)$
$include-after$
$endfor$
</body>
</html>
